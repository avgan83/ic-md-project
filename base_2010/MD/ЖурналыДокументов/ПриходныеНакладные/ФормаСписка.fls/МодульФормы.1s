Функция НомерПиктограммы()
	Перем НомПикт;

	Если (ТекущийДокумент.Вид()="ПриходнаяНакладная")  Тогда
	    ПодчДок = СоздатьОбъект("Документ");
		Если ПодчДок.ВыбратьПодчиненныеДокументы(,,ТекущийДокумент) = 1 Тогда
		    НомПикт = 2;
		Иначе
			НомПикт = 1;
		КонецЕсли;

	Иначе
		НомПикт = 0;
	КонецЕсли;

	Возврат НомПикт;
КонецФункции //НомерПиктограммы
//-----------------------

Процедура ПриОткрытии()
    Дата1=НачалоИнтервала();
	Дата2=КонецИнтервала();
КонецПроцедуры