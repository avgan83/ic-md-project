	Если Значен=1 Тогда
		Форма.ИспользоватьСлой("Основной, Общие ",2);
	КонецЕсли;
	Если Значен=2 Тогда
		Форма.ИспользоватьСлой("Основной, Амортизация ",2);
		Проверка();
	КонецЕсли;
	Если Значен=3 Тогда
		Форма.ИспользоватьСлой("Основной, Дополнительно ",2);
		Если 1=1 Тогда
		    
		Иначе
		    
		КонецЕсли; 
	КонецЕсли;   
	Если Значен=4 Тогда
		Форма.ИспользоватьСлой("Основной,СХ ",2);
	КонецЕсли;
КонецПроцедуры

