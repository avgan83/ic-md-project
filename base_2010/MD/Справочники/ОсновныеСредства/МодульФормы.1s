Процедура ВводНового()
	Амортизация=1;
	Если Наименование="" Тогда
    	МетодНачисленияАмортизации=Перечисление.МетодыНачислАмортизации.Прямолинейный;
		ЕдИзм=Константа.ОснЕдИзм;
		НДС=глНДС;
		ДатаВвода=ТекущаяДата();
		ГруппаПоНалОбл=ВернутьПоКоду("КлассификаторОС",1);
	КонецЕсли;
КонецПроцедуры

Процедура Проверка()
	Если МетодНачисленияАмортизации=Перечисление.МетодыНачислАмортизации.Прямолинейный Тогда
		Форма.Т1.Видимость(1);
