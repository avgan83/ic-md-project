		Предупреждение("Не задан сотрудник");
		СтатусВозврата(0);
		Возврат;
	КонецЕсли;
	Если Пустаястрока(ВидВысвобождения)=1 Тогда
		Предупреждение("Не задан вид высвобождения");
		СтатусВозврата(0);
		Возврат;
	КонецЕсли;

	Если глМожноЗаписатьДокумент(Контекст)=0 Тогда
		СтатусВозврата(0);
	КонецЕсли;
	ЖурналДокумента=глВыбратьЖурнал(ТекущийДокумент());
	
КонецПроцедуры

