Процедура ОткрытьНормы()
	Если Выбран()=0 Тогда
		Если Вопрос("Список Норм можно редактировать
					|только после записи Основного средства.
					|Записать ?", "Да+Нет") = "Да" Тогда
	    	Записать();
		Иначе
			Возврат;
		КонецЕсли;
    КонецЕсли;
	ОткрытьФормуМодально("Справочник.НормыРасходаТоплива", Контекст);
КонецПроцедуры     

Процедура ОткрытьКлассы()
	Если Выбран()=0 Тогда
		Если Вопрос("Список договоров можно редактировать"+РазделительСтрок+
					"только после записи контрагента"+РазделительСтрок+
					"Записать контрагента", "Да+Нет") = "Да" Тогда
	    	Записать();
		Иначе
			Возврат;
		КонецЕсли;
    КонецЕсли;
	ОткрытьФормуМодально("Справочник.КлассыГрузов", Контекст);
КонецПроцедуры

