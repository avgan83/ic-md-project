

Процедура ВыборКаталогаКБИ()
	Если СокрЛП(КБИ)="" Тогда
		ИмяКаталога="c:\"; 
	Иначе
		ИмяКаталога=КБИ;
	КонецЕсли;
	ФС.ВыбратьКаталог(ИмяКаталога);
	КБИ=СокрЛП(ИмяКаталога);
КонецПроцедуры    

